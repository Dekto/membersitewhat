    <div class="column is-7 is-offset-1">

      <h1 class="title is-2"><%= @job.title %></h1>

      <ul class="list pb4">
        <li class="inline-block f6 pr2"><%= job_type(@job.job_type) %></li>
        <li class="inline-block f6 ph2"><i class="fa fa-pin"></i> <%= @job.location %></li>
